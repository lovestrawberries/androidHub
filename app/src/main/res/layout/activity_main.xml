<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical">

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2">

        <android.support.v7.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/card_view_weather"
            android:layout_gravity="center"
            android:layout_width="0dp"
            android:layout_height="150dp"
            card_view:cardCornerRadius="0dp"
            android:layout_weight="1"
            android:layout_margin="1dp">

            <TextView
                android:text="@string/weather"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/open_weather"/>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/card_view_twitter"
            android:layout_gravity="center"
            android:layout_width="0dp"
            android:layout_height="150dp"
            card_view:cardCornerRadius="0dp"
            android:layout_weight="1">

            <TextView
                android:text="@string/twitter"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/open_twitter"/>

        </android.support.v7.widget.CardView>

    </LinearLayout>

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2">

        <android.support.v7.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/card_view_instagram"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="150dp"
            card_view:cardCornerRadius="0dp"
            android:layout_margin="1dp">

            <TextView
                android:text="@string/instagram"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/open_instagram"/>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/card_view_facebook"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="150dp"
            card_view:cardCornerRadius="0dp">

            <TextView
                android:text="@string/facebook"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/open_facebook"/>

        </android.support.v7.widget.CardView>
    </LinearLayout>

</LinearLayout>